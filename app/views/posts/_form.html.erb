<% if @post.errors.any? %>
    <div class="alert alert-error">
      <h3>Please correct these problems:</h3>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>


<div class="container1">

 <%= form_for @post, :html => {class:"form-vertical"},:url => new_post_path  do |f| %>

    <%= f.label :title %>

    <%= f.text_field :title, :autofocus => true, class:"input" %>

    <%= f.label :url%>
    <%= f.text_field :url, class:"input" %>
        <h4> or</h4>
    <%= f.label :text %>
    <textarea rows="3"> <%= f.text_field :text %>  </textarea>
    <div class="form-actions">
      <%= f.submit :class => 'btn btn-primary' %>
    </div>        </div>


      </div>



<% end %>

