<%= form_for(resource, :as => resource_name, :html => {class:"form-signin"}, :url => session_path(resource_name)) do |f| %>

    <%= f.email_field :email, :autofocus => true, class:"input-block-level", placeholder:"Email" %>
    <%= f.password_field :password, class:"input-block-level", placeholder:"Пароль"%>

    <% if devise_mapping.rememberable? -%>
        <label class="checkbox">
        <div style="font-size: 12px;"> <%= f.check_box :remember_me  %> Запомніць мяне </div>
        </label>
    <% end -%>

    <%= f.submit "Увайсці", class:"btn btn-success" %>

    <%= render "devise/shared/links" %><% end %>